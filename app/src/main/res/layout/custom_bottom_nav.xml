<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <!-- Beranda -->
    <LinearLayout
        android:id="@+id/navBeranda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconBeranda"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="#4CAF50" />

        <TextView
            android:id="@+id/labelBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat" />
    </LinearLayout>

    <!-- Laporan -->
    <LinearLayout
        android:id="@+id/navLaporan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconLaporan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_report"
            app:tint="#999999" />

        <TextView
            android:id="@+id/labelLaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat" />
    </LinearLayout>

    <!-- Deteksi (Button Besar dengan Gradient) -->
    <FrameLayout
        android:id="@+id/navDeteksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Circle Button dengan Gradient -->
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="-8dp"
                android:background="@drawable/deteksigambar"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat" />
        </LinearLayout>
    </FrameLayout>

    <!-- Search -->
    <LinearLayout
        android:id="@+id/navSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_education_icon"
            app:tint="#999999" />

        <TextView
            android:id="@+id/Edukasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edukasi"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat" />
    </LinearLayout>

    <!-- Pengaturan -->
    <LinearLayout
        android:id="@+id/navPengaturan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconPengaturan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            app:tint="#999999" />

        <TextView
            android:id="@+id/labelPengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat" />
    </LinearLayout>

</LinearLayout>