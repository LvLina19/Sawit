<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edukasi Tentang Sawit"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat" />
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section 1: Ayo Baca SawitPintar! -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ayo Baca SawitPintar!"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/btnLihatSemuaArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua ›"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/montserrat"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Article Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Article 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardArticle1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/article_tbs"
                            android:scaleType="centerCrop"
                            android:contentDescription="Article Image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dampak Kebijakan Pemerintah terhadap Harga TBS"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pemerintah sering mengintervensi harga komoditas pertanian termasuk TBS. Lalu, bagaimana sebenarnya harga TBS terbentuk di Indonesia?"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="← Baca lalu"
                                android:textSize="11sp"
                                android:textColor="#999999"
                                android:fontFamily="@font/montserrat" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Article 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardArticle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/article_quality"
                            android:scaleType="centerCrop"
                            android:contentDescription="Article Image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tips Jaga Kualitas TBS &amp; Harga Tinggi"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kualitas TBS yang baik menentukan harga jual. TBS, sebagai cara untuk memaksimalkan hasil panen dan keuntungan petani sawit."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="← Baca lalu"
                                android:textSize="11sp"
                                android:textColor="#999999"
                                android:fontFamily="@font/montserrat" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Section 2: Ayo Bermain & Raih Hadiah Menarik! -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ayo Bermain &amp; Raih Hadiah Menarik!"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="12dp" />

            <!-- Game Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Game 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGame1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/game_smart_farmer"
                        android:scaleType="centerCrop"
                        android:contentDescription="Smart Farmer Game" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_overlay" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smart Farmer:"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Petualangan Petani Sawit"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/montserrat"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Game 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGame2"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gradient_overlay"
                        android:scaleType="centerCrop"
                        android:contentDescription="Harvest Hero Game" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_overlay" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harvest Hero:"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teka-teki Kebun Sawit"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/montserrat"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Section 3: Video Tutorial -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temukan wawasan baru lewat video ini!"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="12dp" />

            <!-- Video Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/game_harvest_hero"
                        android:scaleType="centerCrop"
                        android:contentDescription="Video Thumbnail" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33000000" />

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_play_circle"
                        android:layout_centerInParent="true"
                        app:tint="#FFFFFF"
                        android:contentDescription="Play Button" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>



</LinearLayout>