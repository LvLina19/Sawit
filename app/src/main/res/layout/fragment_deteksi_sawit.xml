<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_deteksi_sawit"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deteksi Sawit"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="16dp" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deteksi Sawit"
                android:textSize="24sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp" />

            <!-- Image Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="Preview Image" />
            </androidx.cardview.widget.CardView>

            <!-- Button Pilih Foto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#4CAF50">

                <Button
                    android:id="@+id/btnPilihFoto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="PILIH FOTO DARI GALERI"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="?attr/selectableItemBackground"
                    android:stateListAnimator="@null" />
            </androidx.cardview.widget.CardView>

            <!-- Button Cek Kematangan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#4CAF50"
                app:strokeWidth="2dp">

                <Button
                    android:background="@drawable/btn_border_green"
                    android:id="@+id/btnCekKematangan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cek Kematangan"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:stateListAnimator="@null" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>
