<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_deteksi_sawit"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFFFFF"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deteksi Sawit"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp" />
            </androidx.appcompat.widget.Toolbar>

            <!-- Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deteksi Sawit"
                    android:textSize="24sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="24dp" />

                <!-- Image Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/imageCard"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="32dp">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="Preview Image" />
                </androidx.cardview.widget.CardView>

                <!-- Button Pilih Foto -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#4CAF50">

                    <Button
                        android:id="@+id/btnPilihFoto"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="PILIH FOTO DARI GALERI"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="?attr/selectableItemBackground"
                        android:stateListAnimator="@null" />
                </androidx.cardview.widget.CardView>

                <!-- Button Cek Kematangan -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#4CAF50"
                    app:strokeWidth="2dp"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:background="@drawable/btn_border_green"
                        android:id="@+id/btnCekKematangan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Cek Kematangan"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:stateListAnimator="@null" />
                </androidx.cardview.widget.CardView>

                <!-- Result Container (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/resultContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Success Icon and Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E8F5E9"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_check"
                                android:layout_gravity="center"
                                android:contentDescription="Success" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deteksi Berhasil"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvResultLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buah Matang"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Confidence Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Tingkat Kepercayaan"
                                    android:textSize="14sp"
                                    android:textColor="#666666" />

                                <TextView
                                    android:id="@+id/tvConfidence"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="94%"
                                    android:textSize="14sp"
                                    android:textColor="#4CAF50"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressConfidence"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:progressDrawable="@drawable/progress_gradient"
                                android:progress="94"
                                android:max="100" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Location Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lokasi"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Riau, Indonesia"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Action Buttons -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="2dp"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/btnScanLagi"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Scan Lagi"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:background="?attr/selectableItemBackground"
                            android:stateListAnimator="@null" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="2dp">

                        <Button
                            android:id="@+id/btnRiwayatDeteksi"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Riwayat Deteksi"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:background="?attr/selectableItemBackground"
                            android:stateListAnimator="@null" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>